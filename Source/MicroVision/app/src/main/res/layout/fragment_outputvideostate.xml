<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:text="SetOutputVideoState"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/fragment_outputvideostate_layout_enable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_cart"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_outputvideostate_layout_tv_enable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_outputvideostate_layout_disable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/shape_cart"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fragment_outputvideostate_layout_tv_disable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disable"
                android:textColor="#666666"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_outputvideostate_btn_set_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMMIT" />

        <Button
            android:id="@+id/fragment_outputvideostate_btn_set_no_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOT COMMIT" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dip"
        android:text="GetOutputVideoState"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fragment_outputvideostate_btn_get_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="current state is "
            android:textSize="12dp" />

        <TextView
            android:id="@+id/fragment_outputvideostate_tv_get_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_weight="1"
            android:text="Test String"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>